{
  "AllowedHosts": "*",
  "MemoryCache": {
    "ExpirationKeys": {
      "CatalogTree": "01:00:00",
      "DefaultTimeSpan": "02:00:00"
    }
  },
  "DataflowDataCache": {
    "Type": "NoSql",
    "ConnectionString": "Data Source=DB/DataflowDataCache.sqlite;",
    "IsEnable": true,
    "MaxSize": 400, //Mb
    "Expiration": 7200, //Second
    "ExclusionList": [] //List of string DataflodwId
  },
  "EndPointConnector": {
    "NodeRepository": {
      "Type": "DATABASE",
      "ConnectionString": "config/nodesConfigDB.json"
    }
  },
  "SDMXCache": {
    "ConnectionString": "Data Source=DB/SDMXCache.sqlite;",
    "ExpiredTime": 3,
    "DisableSdmxCache": true,
    "DisableGlobalCache": true,
    "DisableNamespace": false
  },
  "Database": {
    "DbType": "SQLite",
    "ConnectionString": "Data Source=DB/DataBrowserIntegrationTestDB.sqlite;",
    "EnableQueryOptimizer": false,
    "QueryOptimizerDbType": "microsoft.data.sqlite", //system.data.sqlclient
    "QueryOptimizerConnectionString": "Data Source=DB/DataBrowserIntegrationTestDB.sqlite;",
    "UseMigrationScript": false
  },
  "General": {
    "IndexRedirect": {
      "Enable": false,
      "Url": "ui"
    },
    "CORS": {
      "Enable": true
    },
    "EndPointResponseLogForDebug": false,
    "InternalRestUrl": "",
    "ExternalRestUrl": "",
    "ExternalClientUrl": ""
  },
  "Authentication": {
    "IsActive": false,
    "Key": "8CF07358F9BB4CA98C0EE4D26A97858C",
    "Issuer": "DataBrowserIssuerApi",
    "Audience": "DataBrowserApiUser",
    "JwtTokenLifeTime": 10, //Minute
    "EnableRefreshToken": true,
    "EnableAuditLogin": true,
    "RefreshCookieOptions": {
      "Name": null,
      "Domain": null,
      "HttpOnly": true,
      "Path": null,
      "SameSite": "None", //null, "Unspecified", "None", "Lax", "Strict"
      "Secure": false,
      "RefreshTokenLifeTime": 14400 //Minute
    },
    "UserPolicy": {
      "PasswordRequiredLength": 8,
      "PasswordRequireNonAlphanumeric": true,
      "PasswordRequireLowercase": true,
      "PasswordRequireUppercase": true,
      "PasswordRequireDigit": true
    }
  },
  "GeometryDatabase": {
    "DbType": "SQLite",
    "ConnectionString": "Data Source=DB/Geometry.sqlite;"
  },
  "Workers": {
  },
  "Serilog": {
    "Using": [
    ],
    "LevelSwitches": {
      "$appLogLevel": "Debug",
      "$netLogLevel": "Debug",
      "$sysLogLevel": "Debug"
    },
    "MinimumLevel": {
      "ControlledBy": "$appLogLevel",
      "Override": {
        "Microsoft": "$netLogLevel",
        "System": "$sysLogLevel"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ]
    //"Properties": {
    //  "Application": "Sample"
    //}
  }
}